<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <PreferenceCategory
        android:title="@string/categoryProfil">
        
        <EditTextPreference
            android:title="@string/profileName"
            android:key="profileName"
            android:summary="@string/nameSummary"
            />
        
        <ListPreference
            android:entries="@array/genderEntries"
            android:title="@string/gender"
            android:key="gender"
            android:summary="@string/genderSummary"
            android:entryValues="@array/gender"
            />
        
        <EditTextPreference
            android:title="@string/age"
            android:key="age"
            android:summary="@string/ageSummary"
            android:inputType="number"
			/>
        
    </PreferenceCategory>
    
	<PreferenceCategory
            android:title="@string/categoryMap">
            
		<EditTextPreference android:key="radius"
        	android:title="@string/radius" android:inputType="number"
       		android:dialogTitle="@string/radiusDialog" />
 
    	<EditTextPreference android:key="refreshvalue"
        	android:title="@string/refreshvalue" android:inputType="number"
        	android:dialogTitle="@string/refreshvalueDialog" />
    	
    	<CheckBoxPreference android:title="@string/satellite"
    	    android:summary="@string/satelliteSummary"
            android:key="satellite" />
	    
    </PreferenceCategory>
    
</PreferenceScreen>