<?xml version="1.0" encoding="utf-8"?>

<manifest 
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.ac.umons.gl.mobilecityguide"
    android:versionCode="1"
    android:versionName="1.0" >
    
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
  <uses-permission android:name="android.permission.ACCESS_GPS" />
  <uses-permission android:name="android.permission.LOCATION" />
  
  <uses-sdk android:minSdkVersion="10" />
    
  <application 
      android:name=".poi.Itinerary" 
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/theme" >
        
    <uses-library android:name="com.google.android.maps" />
    
    <activity
        android:label="@string/app_name"
        android:name=".map.MainActivity">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
       
    </activity>
    
    <activity
        android:label="@string/app_name"
        android:name=".gui.PreferencesActivity">
    </activity>
    
    <activity
        android:label="@string/app_name"
        android:name=".gui.POIDisplayActivity">
    </activity>
    
    <activity
        android:label="@string/app_name"
        android:name=".gui.FilterActivity">
    </activity>
    
    <activity
        android:label="@string/app_name"
        android:name=".gui.TagFilterActivity">
    </activity>
    
    <activity
        android:label="@string/app_name"
        android:name=".gui.RankingFilterActivity">
    </activity>
    
    <activity
        android:label="@string/app_name"
        android:name=".gui.POIListActivity">
    </activity>
    
    <activity
        android:label="@string/app_name"
        android:name=".gui.ItineraryActivity">
    </activity>
    
    <activity
        android:label="@string/app_name"
        android:name=".gui.ItineraryCreationActivity">
    </activity>
    
  </application>
    
</manifest>